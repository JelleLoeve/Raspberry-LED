@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <h1>Router ping</h1>
    <h4>@ViewBag.PingResults1</h4>
    <h4>@ViewBag.PingResults2</h4>

    @using (Html.BeginForm("Ping", "Router", FormMethod.Post))
    {
        <label>
            Enter ip address to ping
            <input class="ip-input" type="text" name="IP" id="IP" required placeholder="Enter IP address" value="10.10.55.254" />
        </label>
        <input type="submit" name="Submit" id="Submit" value="Ping!" />
    }
</div>

